<div class="container">
  <p style="color: green"><%= notice %></p>

  <%= render @estudiante %>

  <div style="margin-top: 20px;">
    <%= link_to "Editar estudiante", edit_estudiante_path(@estudiante), class: "btn" %>
    <%= link_to "Volver al listado", estudiantes_path, class: "btn" %>
    <%= button_to "Eliminar estudiante", @estudiante, method: :delete, data: { confirm: "¿Estás seguro?" }, class: "btn", form_class: "inline" %>
  </div>
</div>
